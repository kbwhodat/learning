#!/usr/bin/env bash
set -e
if [[ ! -d "/home/katob/Documents/projects/learning/database-performance" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/katob/Documents/projects/learning/database-performance")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/katob/Documents/projects/learning/database-performance" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/katob/Documents/projects/learning/database-performance/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/katob/Documents/projects/learning/database-performance/.envrc" "/home/katob/Documents/projects/learning/database-performance/.direnv"/*.rc
